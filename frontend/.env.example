# =====================================
# FlowPay Environment Variables
# =====================================

# WalletConnect Project ID (Required)
# Get yours at https://cloud.walletconnect.com
VITE_WALLETCONNECT_PROJECT_ID=your_project_id_here

# Cronos RPC URLs (Optional - defaults provided)
VITE_CRONOS_MAINNET_RPC=https://evm.cronos.org
VITE_CRONOS_TESTNET_RPC=https://evm-t3.cronos.org

# x402 Facilitator API (Optional)
VITE_X402_FACILITATOR_URL=https://facilitator.cronoslabs.org/v2/x402

# Telegram Bot Integration (Optional - for Telegram Mini App)
VITE_TELEGRAM_BOT_USERNAME=flowpay_bot
VITE_TELEGRAM_BOT_TOKEN=
VITE_TELEGRAM_MINI_APP_URL=https://your-domain.com

# Smart Contract Addresses (Update after deployment)
VITE_INTENT_CONTRACT_ADDRESS_MAINNET=
VITE_INTENT_CONTRACT_ADDRESS_TESTNET=

# API Configuration (Optional)
VITE_API_BASE_URL=http://localhost:3000
VITE_API_TIMEOUT=30000

# Feature Flags (Optional)
VITE_ENABLE_TELEGRAM=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false

