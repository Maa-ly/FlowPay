# =====================================
# FlowPay Backend Environment Variables
# =====================================

# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/flowpay?schema=public"

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRATION=7d

# Blockchain - Cronos Testnet
CRONOS_RPC_URL=https://evm-t3.cronos.org
CRONOS_CHAIN_ID=338
CRONOS_MAINNET_RPC=https://evm.cronos.org
CRONOS_MAINNET_CHAIN_ID=25

# Smart Contracts (Deployed)
INTENT_CONTRACT_ADDRESS=your_intent_contract_address
FACTORY_CONTRACT_ADDRESS=your_factory_contract_address

# Execution Wallet (Backend wallet for automated intent execution)
# IMPORTANT: This wallet should have CRO for gas fees
EXECUTION_WALLET_PRIVATE_KEY=your_private_key_here

# x402 Facilitator
X402_FACILITATOR_URL=https://facilitator.cronoslabs.org/v2/x402
X402_VERSION=1

# USDC Contract Addresses
USDC_TESTNET_ADDRESS=0xc01efAaF7C5C61bEbFAeb358E1161b537b8bC0e0
USDC_MAINNET_ADDRESS=0xc21223249CA28397B4B6541dfFaEcC539BfF0c59

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_USERNAME=your_bot_username
TELEGRAM_WEBHOOK_URL=https://your-backend-domain.com/api/telegram/webhook
TELEGRAM_ADMIN_ID=your_telegram_user_id

# Chimoney Integration (Off-Ramping)
CHIMONEY_API_KEY=your_chimoney_api_key_here
CHIMONEY_API_URL=https://api-v2-sandbox.chimoney.io/v0.2
CHIMONEY_WEBHOOK_SECRET=your_chimoney_webhook_secret

# Polygon Treasury (for Chimoney payouts)
POLYGON_TREASURY_WALLET=your_polygon_wallet_address
POLYGON_TREASURY_PRIVATE_KEY=your_polygon_wallet_private_key
POLYGON_RPC_URL=https://polygon-rpc.com

# WalletConnect
WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Frontend URL (for CORS)
FRONTEND_URL=https://flowpayment.vercel.app
FRONTEND_DEV_URL=http://localhost:5173

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=

# Intent Execution Settings
INTENT_CHECK_INTERVAL=60000
GAS_PRICE_CHECK_INTERVAL=30000
SAFETY_BUFFER_PERCENTAGE=10
MAX_GAS_PRICE_GWEI=100

# Notification Settings
ENABLE_TELEGRAM_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=false
NOTIFICATION_BATCH_SIZE=50

# Email (Optional - for future use)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@flowpay.com
