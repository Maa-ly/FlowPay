{
  "name": "flowpay-telegram-bot",
  "version": "1.0.0",
  "description": "FlowPay Telegram Bot for intent-driven payments on Cronos",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "node --loader ts-node/esm --no-warnings src/index.ts",
    "dev:tsx": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "deploy": "vercel --prod"
  },
  "keywords": [
    "telegram",
    "bot",
    "cronos",
    "payments",
    "web3"
  ],
  "author": "FlowPay",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "grammy": "^1.30.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
